{
  "version": "1.1",
  "project_root": "..",
  "kits": {
    "cypilot-sdlc": {
      "format": "Cypilot",
      "path": "kits/sdlc"
    }
  },
  "ignore": [
    {
      "reason": "Internal test fixtures contain synthetic/broken cpt markers and IDs",
      "patterns": [
        "tests/test_codebase.py",
        "tests/test_cli_integration.py",
        "tests/test_cli_py_coverage.py"
      ]
    }
  ],
  "systems": [
    {
      "name": "Cypilot",
      "slug": "cypilot",
      "kit": "cypilot-sdlc",
      "autodetect": [
        {
          "kit": "cypilot-sdlc",
          "system_root": "{project_root}",
          "artifacts_root": "architecture",
          "artifacts": {
            "PRD": {"pattern": "PRD.md", "traceability": "FULL"},
            "DESIGN": {"pattern": "DESIGN.md", "traceability": "FULL"},
            "DECOMPOSITION": {"pattern": "DECOMPOSITION.md", "traceability": "FULL"},
            "ADR": {"pattern": "ADR/**/*.md", "traceability": "FULL", "required": false},
            "SPEC": {"pattern": "specs/*.md", "traceability": "DOCS-ONLY", "required": false}
          },
          "codebase": [
            {
              "name": "Cypilot CLI",
              "path": "skills/cypilot/scripts/cypilot",
              "extensions": [".py"]
            },
            {
              "name": "Cypilot Tests",
              "path": "tests",
              "extensions": [".py"]
            }
          ]
        }
      ]
    },
    {
      "name": "Example: Overwork Alert",
      "slug": "overwork-alert",
      "kit": "cypilot-sdlc",
      "artifacts_dir": "examples/overwork_alert/architecture",
      "autodetect": [
        {
          "kit": "cypilot-sdlc",
          "system_root": "{project_root}",
          "artifacts_root": "examples/overwork_alert/architecture",
          "artifacts": {
            "PRD": {"pattern": "PRD.md", "traceability": "FULL"},
            "DESIGN": {"pattern": "DESIGN.md", "traceability": "FULL"},
            "DECOMPOSITION": {"pattern": "DECOMPOSITION.md", "traceability": "FULL"},
            "ADR": {"pattern": "ADR/**/*.md", "traceability": "FULL", "required": false},
            "SPEC": {"pattern": "specs/*.md", "traceability": "FULL", "required": false}
          },
          "codebase": [
            {
              "name": "Overwork Alert",
              "path": "examples/overwork_alert/src",
              "extensions": [".py"]
            },
            {
              "name": "Tests",
              "path": "tests",
              "extensions": [".py"]
            }
          ]
        }
      ]
    }
  ]
}
